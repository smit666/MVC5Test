@model MVC5Test.ViewModel.StudentViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div>
   
        @{
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>


                    @foreach (var item in Model.StudentsList)
                    {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.Email</td>
                        <td>@Html.ActionLink("Edit","Edit",new { Id = item.StudentId }) </td>
                    </tr>
           
            }
            </tbody>
            </table>
        }

  
</div>
<br />
<ol>
    @{
        foreach (var item in Model.Departments)
        {
            <li>@item.Name</li>
        }
    }

</ol>